{
  "name": "spotify-wrapper",
  "description": "A wrapper to work with the Spotify Web Api.",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/lucabarbosa/spotify-wrapper.git",
  "author": "Lucas Barbosa <barbosa.lucash@gmail.com> (https://www.github.com/lucabarbosa)",
  "license": "MIT",
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "exclude": [
      "tests/**/*.spec.js"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "build:lib": "yarn clean && babel --out-dir lib src",
    "build:all": "yarn build && yarn build:lib",
    "lint": "eslint src/**/*.js",
    "prepush": "yarn lint && yarn test:coverage",
    "test": "mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "nyc npm test"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "node-fetch": "^2.6.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  }
}
